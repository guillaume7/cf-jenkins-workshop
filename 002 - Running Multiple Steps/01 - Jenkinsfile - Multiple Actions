pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
       	stage('build'){
          steps {
            saveAndPrintDate("test")
            sh "sleep 10s"
            saveAndPrintDate("test2")
          }
	}
    }
}

def saveAndPushDate(filename = '') {
  sh "date > $filename && cat $filename"
}

